{
  "restartable": "rs",
  "ignore": [".git", ".svn", "logs", "pem", "node_modules/**/node_modules"],
  "verbose": true,
  "execMap": {
    "js": "node dist/src/app.js"
  },
  "watch": ["dist/src"],
  "env": {
    "NODE_ENV": "production"
  },
  "ext": "ts js json",
  "exec": "node --loader ts-node/esm dist/src/app.js"
}
