{
  "restartable": "rs",
  "ignore": [
    ".git",
    ".svn",
    "logs",
    "pem",
    "node_modules/**/node_modules",
    "src/**/*.spec.ts"
  ],
  "verbose": true,
  "execMap": {
    "js": "node src/app.js"
  },
  "watch": ["src"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts js json",
  "exec": "node --loader ts-node/esm src/app.ts"
}
